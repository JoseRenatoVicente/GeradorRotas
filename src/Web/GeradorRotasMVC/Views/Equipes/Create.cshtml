@model GeradorRotas.Application.ViewModels.EquipeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Equipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Equipe.Nome" class="control-label"></label>
                <input asp-for="Equipe.Nome" class="form-control" />
                <span asp-validation-for="Equipe.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Equipe.Cidade" class="control-label"></label>
                <select asp-for="Equipe.Cidade.Id" asp-items="@(new SelectList(Model.Cidades,"Id","Nome","Estado"))" class="form-control"></select>
                <span asp-validation-for="Equipe.Cidade.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Equipe.Ativo" type="checkbox" value="true" />
                <label asp-for="Equipe.Ativo" class="control-label"></label>
                <span asp-validation-for="Equipe.Ativo" class="text-danger"></span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <select id="dropDownList-example" name="" asp-for="Equipe.Pessoas"
                                asp-items="@(new SelectList(Model.Pessoas,"Id","Nome"))" multiple class="form-control"></select>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Voltar à lista</a>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

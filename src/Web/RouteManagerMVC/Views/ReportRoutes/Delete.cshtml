@model RouteManagerMVC.Models.ReportRouteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>

<h3>Você tem certeza de que quer apagar isto?</h3>
<div>
    <h4>Rota</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExcelFile.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExcelFile.FileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExcelFile.UploadDate)
        </dt>
        <dd class="col-sm-10">
            @Model.ExcelFile.UploadDate.ToString("dd/MM/yyyy hh:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ExcelFile.Columns)
        </dt>
        <dd class="col-sm-10">
           <select asp-items="@(new SelectList(Model.ExcelFile.Columns))" class="form-control"></select>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ExcelFile.Id" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar á lista</a>
    </form>
</div>

@model UserLogin

<div class="row justify-content-center">

    <div class="col-xl-5 col-lg-7 col-md-7">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">

                <div class="col">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Bem vindo de volta!</h1>
                        </div>
                        <form asp-action="Login" asp-controller="Auth" class="user">
                            <div class="mb-3"><input class="form-control form-control-user" type="text" asp-for="@Model.UserName" aria-describedby="emailHelp" placeholder="Nome de usuário"></div>
                            <div class="mb-3"><input class="form-control form-control-user" type="password" asp-for="@Model.Password" id="exampleInputPassword" placeholder="Senha"></div>
                            <button class="btn btn-primary d-block btn-user w-100" type="submit">Entrar</button>
                            <hr>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

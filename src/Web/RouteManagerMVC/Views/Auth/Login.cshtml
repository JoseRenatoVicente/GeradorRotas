@model UserLogin

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-12 col-xl-10">
            <div class="card shadow-lg o-hidden border-0 my-5">
                <div class="card-body p-0">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h4 class="text-dark mb-4">Bem vindo de volta!</h4>
                                </div>
                                <form asp-action="Login" asp-controller="Auth" class="user">
                                    <div class="mb-3"><input class="form-control form-control-user" type="text" asp-for="@Model.UserName" aria-describedby="emailHelp" placeholder="Nome de usuário"></div>
                                    <div class="mb-3"><input class="form-control form-control-user" type="password" asp-for="@Model.Password" id="exampleInputPassword" placeholder="Senha"></div>
                                    <button class="btn btn-primary d-block btn-user w-100" type="submit">Login</button>
                                    <hr>
                                </form>
                                <div class="text-center"><a class="small" href="forgot-password.html">Esqueceu a senha?</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

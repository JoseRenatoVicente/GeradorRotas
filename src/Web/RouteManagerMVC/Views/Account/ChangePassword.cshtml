@model RouteManagerMVC.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Mudar Senha";
}

<div class="container">
    <main role="main" class="pb-3">

        <br>
        <br>
        <h2>Gerencie sua conta</h2>


        <h4>Altere as configurações da sua conta</h4>
        <hr>
        <div class="row">
            <div class="col-md-3">

                <div class="card mb-3">
                    <div class="card-body shadow">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a class="nav-link" asp-action="Profile">Perfil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-action="ChangePassword">
                                    Mudar
                                    senha
                                </a>
                            </li>

                        </ul>

                    </div>
                </div>

            </div>
            <div class="col-md-9">
                <form asp-action="ChangePassword">
                    <div class="card shadow mb-3">
                        <div class="card-header py-3">
                            <h4>Perfil</h4>
                        </div>

                        <div class="card-body">

                                <div class="col">
                                    <div class="mb-3">
                                        <label asp-for="CurrentPassword" class="control-label"></label>
                                        <input type="password" placeholder="Senha Atual" asp-for="CurrentPassword" class="form-control" />
                                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="mb-3">
                                        <label asp-for="Password" class="control-label"></label>
                                        <input type="password" placeholder="Senha" asp-for="Password" class="form-control" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col">
                                    <div class="mb-3">
                                        <label asp-for="ConfirmPassword" class="control-label"></label>
                                        <input type="password" placeholder="Confirme a Senha" asp-for="ConfirmPassword" class="form-control" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>

                        <button type="submit" class="btn btn-primary">Alterar Senha</button>&nbsp; &nbsp; &nbsp;
                            </div>


                </div
                </form>


            </div>
        </div>
    </main>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

@model RouteManagerMVC.Models.UserRegister

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<hr />

<div class="row">
    <div class="col">
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="text-primary m-0 fw-bold">Cadastro Usuário</p>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input type="text" placeholder="Nome" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="UserName" class="control-label"></label>
                            <input type="text" placeholder="Nome de usuário" asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input type="email" placeholder="email@email.com" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input type="password" placeholder="Senha" asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input type="password" placeholder="Confirme a Senha" asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Role" class="control-label"></label>
                            <select asp-for="Role.Id" asp-items="@(new SelectList(Model.Roles,"Id","Description"))" class="form-control"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Registar</button>&nbsp; &nbsp; &nbsp;

                        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                            <span class="icon text-gray-600">
                                <i class="fas fa-arrow-right"></i>
                            </span>
                            <span class="text">Voltar á lista</span>
                        </a>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

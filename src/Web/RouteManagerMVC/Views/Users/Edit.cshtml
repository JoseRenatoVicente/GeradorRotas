@model RouteManagerMVC.Models.UserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>
<hr />

<div class="row">
    <div class="col">
        <div class="card shadow mb-3">
            <div class="card-header py-3">
                <p class="text-primary m-0 fw-bold">Usuário</p>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input type="text" placeholder="Nome" asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="UserName" class="control-label"></label>
                            <input type="text" placeholder="Nome de usuário" asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Email" class="control-label"></label>
                            <input type="email" placeholder="email@email.com" asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col">
                        <div class="mb-3">
                            <label asp-for="Role" class="control-label"></label>
                            <select asp-for="Role.Id" asp-items="@(new SelectList(Model.Roles,"Id","Description"))" class="form-control"></select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input asp-for="Active" class="form-check-input" formControlName="ativo" type="checkbox"
                                   id="formCheck-1"><label class="form-check-label" for="formCheck-1"><strong>Ativo no sistema</strong></label>
                        </div>
                    </div>


                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Editar</button>&nbsp; &nbsp; &nbsp;

                        <a asp-action="Index" class="btn btn-secondary btn-icon-split">
                            <span class="icon text-gray-600">
                                <i class="fas fa-arrow-right"></i>
                            </span>
                            <span class="text">Voltar á lista</span>
                        </a>

                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
